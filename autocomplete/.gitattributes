# Set default behavior to automatically normalize line endings
* text=auto

# Rust source files should always use LF endings
*.rs text eol=lf
*.toml text eol=lf

# TypeScript/JavaScript files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf

# Configuration files
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf

# Shell scripts (must use LF)
*.sh text eol=lf

# Windows batch files (must use CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (do not normalize)
*.bin binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.vsix binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Exclude generated files from Git statistics
model.bin linguist-generated
vocab.txt linguist-generated
/target/ linguist-generated
/dist/ linguist-generated
/out/ linguist-generated
node_modules/ linguist-vendored